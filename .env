# Development Environment (Docker)
# Copy to .env for local development

# Database (PostgreSQL in Docker)
POSTGRES_DB=impact_nutrition
POSTGRES_USER=impact_user
POSTGRES_PASSWORD=impact_password

# CMS / Flags (Strapi)
STRAPI_URL=http://localhost:1337
STRAPI_TOKEN=strapi-api-token-to-be-generated

# Vendure API
DB_NAME=vendure_impact
DB_SCHEMA=public
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=impact_user
DB_PASSWORD=impact_password
COOKIE_SECRET=vendure-session-secret-change-in-production
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PASSWORD=superadmin123
PORT=3000
APP_ENV=dev
STOREFRONT_URL=http://localhost:3001

# Redis (optional; fallback to in-memory)
REDIS_URL=redis://localhost:6379

# Meilisearch (optional search) - Not included in Docker initially
MEILI_HOST=
MEILI_KEY=

# Cloudflare (optional edge cache)
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=

# Payments â€“ GPG Checkout (M3 - sandbox values)
GPG_ENDPOINT=https://sandbox.gpg-checkout.com/api
GPG_MERCHANT_ID=sandbox-merchant-123
GPG_SECRET=sandbox-secret-change-me
GPG_WEBHOOK_SECRET=sandbox-webhook-secret

# ClicToPay Payment Gateway (Testing)
CLICTOPAY_USERNAME=test_merchant_user
CLICTOPAY_PASSWORD=test_merchant_pass
CLICTOPAY_WEBHOOK_SECRET=clictopay_webhook_secret_123
CLICTOPAY_API_URL=https://sandbox.clictopay.com/api
CLICTOPAY_TEST_MODE=true

# Shipping file bridge (M4)
SHIP_EXPORT_DIR=/tmp/shipping-exports
SHIP_REMOTE_HOST=sftp.example.com
SHIP_REMOTE_USER=shipping_user
SHIP_REMOTE_PASSWORD=shipping_password
SHIP_REMOTE_PROTOCOL=sftp
SHIP_EXPORT_SCHEDULE=0 8 * * *

# Analytics / Tawk (optional)
GA_MEASUREMENT_ID=
TAWK_PROPERTY_ID=

# PWA
NEXT_PUBLIC_APP_NAME=Impact Nutrition
NEXT_PUBLIC_APP_DESCRIPTION=Premium nutrition supplements

# Next.js URLs
NEXT_PUBLIC_API_URL=http://localhost:3000/shop-api
NEXT_PUBLIC_ADMIN_API_URL=http://localhost:3001/admin-api
NEXT_PUBLIC_CMS_URL=http://localhost:1337

# Feature flags
FEATURE_FLAGS_ENABLED=true